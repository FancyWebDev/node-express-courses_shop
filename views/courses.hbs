<h1>Courses</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}" alt="{{title}}">
          </div>
          <div class="card-content">
            <span class="card-title">{{title}}</span>
            <span class="price-text">Price:</span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action actions">
            <a href="/courses/{{_id}}" target="_blank">Open course</a>
            <a href="/courses/{{_id}}/edit?allow=true">Edit course</a>
            <form action="/card/add%20course%20to%20card" method="POST">
              <input type="hidden" name="_id" value="{{_id}}">
              <button type="submit" class="btn btn-primary">Add to card</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No courses</p>
{{/if}}