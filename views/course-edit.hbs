<h1>Edit course {{course.title}}</h1>

{{#if courseEditError}}
  <p class="errorAlert">{{courseEditError}}</p>
{{/if}}

<div class="add-course">
  <form action="/courses/edit" method="POST" novalidate>
    <div class="row">
      <div class="input-field col s12">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="enter name"></span>
      </div>

      <div class="input-field col s12">
        <input 
          name="price" id="price" type="number" class="validate" required 
          min="1" value="{{course.price}}"
        >
        <label for="price">Course price</label>
        <span class="helper-text" data-error="enter price"></span>
      </div>

      <div class="input-field col s12">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL to course picture</label>
        <span class="helper-text" data-error="enter url"></span>
      </div>

      <input type="hidden" name="_id" value="{{course._id}}">
      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button class="btn btn-info" type="submit">Edit course</button>
    </div>
  </form>
  <form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="_id" value="{{course._id}}">
    <button type="submit" class="btn red">Remove</button>
  </form>
</div>

